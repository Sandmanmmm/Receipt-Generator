# Template Pagination Configuration
# Defines how each template handles multipage rendering
# Used by both test scripts and production dataset generation

# Modern Professional Invoices - uniform item distribution
modern_professional/invoice_a4.html:
  supports_multipage: false
  
modern_professional/invoice_bold.html:
  supports_multipage: false
  
modern_professional/invoice_compact.html:
  supports_multipage: false
  
modern_professional/invoice_compact_multipage.html:
  supports_multipage: true
  first_page_items: 12
  continuation_items_per_page: 12
  last_page_items: 12
  base_height: 900
  item_height: 50
  footer_height: 400
  
modern_professional/invoice_elegant.html:
  supports_multipage: false
  
modern_professional/invoice_ecommerce.html:
  supports_multipage: false
  
modern_professional/invoice_minimal.html:
  supports_multipage: false
  
modern_professional/invoice_minimal_multipage.html:
  supports_multipage: true
  first_page_items: 12
  continuation_items_per_page: 12
  last_page_items: 12
  base_height: 900
  item_height: 50
  footer_height: 400
  
modern_professional/invoice_sidebar.html:
  supports_multipage: false

# Classic Invoices
classic/invoice.html:
  supports_multipage: false
  
modern/invoice.html:
  supports_multipage: false

# Online Order Templates - complex cards with varied first-page counts
retail/online_order_electronics.html:
  supports_multipage: true
  first_page_items: 3          # Large header with status timeline
  continuation_items_per_page: 5
  last_page_items: 3           # Reserve space for totals
  base_height: 900             # Header + timeline + customer panels
  item_height: 180             # Large product cards with specs
  footer_height: 500
  
