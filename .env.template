# Environment Variables Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control!

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY=your-secret-api-key-here-change-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# ============================================
# Model Configuration
# ============================================
MODEL_PATH=models/layoutlmv3_multihead
MODEL_NAME=layoutlmv3-base
DEVICE=cuda  # cuda or cpu

# ============================================
# OCR Configuration
# ============================================
OCR_ENGINE=paddleocr  # paddleocr, tesseract, or easyocr
OCR_LANGUAGES=en

# ============================================
# Training Configuration
# ============================================
BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=4
LEARNING_RATE=5e-5
NUM_EPOCHS=20
WARMUP_STEPS=500
FP16=true
EARLY_STOPPING_PATIENCE=3

# ============================================
# Data Configuration
# ============================================
DATA_DIR=data
NUM_SAMPLES=1000
AUGMENTATION_COPIES=3
TRAIN_SPLIT=0.8
VAL_SPLIT=0.1
TEST_SPLIT=0.1

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/invoicegen.log
LOG_FORMAT=json  # json or text
ENABLE_CONSOLE_LOG=true

# ============================================
# Monitoring Configuration
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTHCHECK=true

# ============================================
# External Services
# ============================================

# Weights & Biases (optional)
WANDB_API_KEY=your-wandb-key-here
WANDB_PROJECT=invoicegen
WANDB_ENTITY=your-username
ENABLE_WANDB=false

# HuggingFace Hub (optional)
HUGGINGFACE_TOKEN=your-hf-token-here
HUGGINGFACE_REPO=your-username/invoicegen-model

# Vast.ai (optional)
VASTAI_API_KEY=your-vastai-key-here

# ============================================
# Cloud Storage (optional)
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=invoicegen-models

# Google Cloud Storage
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=invoicegen-models
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=invoicegen-models

# ============================================
# Database (optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/invoicegen
REDIS_URL=redis://localhost:6379/0

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-for-jwt-tokens
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# Performance
# ============================================
MAX_UPLOAD_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=300
MAX_BATCH_SIZE=100

# ============================================
# Feature Flags
# ============================================
ENABLE_API_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_MONITORING=true
ENABLE_CACHING=false

# ============================================
# Development/Production
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=false
RELOAD=false  # Auto-reload for development
