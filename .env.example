# Environment Variables
# Copy this to .env and fill in your values

# Vast.ai API Key
VASTAI_API_KEY=your_vastai_api_key_here

# HuggingFace Token (optional, for model hub)
HUGGINGFACE_TOKEN=your_hf_token_here

# Weights & Biases (optional, for experiment tracking)
WANDB_API_KEY=your_wandb_key_here
WANDB_PROJECT=invoicegen

# Model Settings
MODEL_PATH=models/layoutlmv3-invoice
DEVICE=cuda  # cuda or cpu

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Training Settings
BATCH_SIZE=4
LEARNING_RATE=5e-5
NUM_EPOCHS=10

# Data Generation
NUM_SAMPLES=100
AUGMENTATION_COPIES=3
